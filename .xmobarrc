Config {
 position = Static { xpos = 5 , ypos = 0, width = 1905, height = 20 }
,alpha = 150
,font    = "xft:Ubuntu:weight=bold:pixelsize=12:antialias=true:hinting=true"
,additionalFonts = [ "xft:Mononoki Nerd Font:pixelsize=11:antialias=true:hinting=true"
                    ,"xft:FontAwesome:pixelsize=13"
                    ]

,  iconRoot =     "/home/akhilesh/.xmobar-icons/icons"
,  sepChar =  "%"       -- delineator between plugin names and straight text
,  alignSep = "}{"      -- separator between left-right alignment
,  template = "   <icon=extra/nixos_16.xpm/>  %StdinReader% }  %date% { %mpris2% <icon=extra/microphone-icon_22.xpm/> %micvolume% %alsa:default:Master%  %disku% %memory% %multicpu% %wlp6s0%  "
,  commands = 
        [
         Run Alsa "default" "Master" ["-t", " <icon=extra/vol.xpm/>  <volume>% <status>", "--" 
                                      , "--off","[ MUTE ]"
                                     ] 
        -- Disk usage 
         , Run DiskU          [("/","<icon=extra/ssd_24_18.xpm/> /: <usedp>%")] 
                             [ "-L","50", "-l", "grey"]
                             300

        -- memory usage monitor
       , Run Memory          [ "-t", "<icon=extra/memory-icon_24.xpm/> <usedratio>%"
                             , "-L", "20", "-l", "grey" , "-H", "90", "-h", "darkred"
                             , "-w", "2"
                             ] 20

        -- cpu activity monitor
        , Run MultiCpu       [ "-t" , "<icon=extra/cpu-icon_24.xpm/><total>%"
                             , "-L", "50", "-l", "grey", "-H", "85", "-h", "darkred"
                             , "-w",  "2"
                             ] 20

        -- network activity monitor (dynamic interface resolution)
        -- threshold units: B/s
        , Run Network "wlp6s0"  [ "-t" , "<icon=extra/wifi-icon_16.xpm/><up> <dev>: <icon=extra/down_arrow_1_14.xpm/> <rx> kB/s <icon=extra/up_arrow_1_14.xpm/> <tx> kB/s"
                             , "-L", "1000", "-H", "5000"
                             , "-w", "3"
                             ] 10

        -- time and date indicator 
        --   (%e = day of month, %b month name %a = day of week, %r = 12 hour format)
        , Run Date           "<icon=extra/calendar-clock-icon_16.xpm/> <fc=#CBCBCB>%e %b %Y</fc> <fc=lightgreen>(%a)</fc> <fc=orange>%r</fc>" "date" 10

         , Run Com "uname" ["-s","-r"] "" 0
         , Run Mpris2 "spotify" ["-t", "<icon=extra/music.xpm/><fc=#b19cd9><title></fc>" , "-M", "30"] 10
         , Run StdinReader
         , Run Com "sh" ["/home/akhilesh/.Xscripts/micVolume"] "micvolume" 10

        ]
}
