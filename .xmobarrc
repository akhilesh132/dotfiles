Config {
   position = Static { xpos = 0 , ypos = 0, width = 1550, height = 20 }
,  alpha = 190
,  bgColor  =      "#151515"
,  font =         "xft:Bitstream Vera Sans Mono:Bold:size=10:antialias=true"
,  iconRoot =     "/home/akhilesh/.xmobar-icons/icons"
,  sepChar =  "%"       -- delineator between plugin names and straight text
,  alignSep = "}{"      -- separator between left-right alignment
,  template = "<icon=extra/nixos_16.xpm/> %uname% %date%   %disku%  %memory%  %multicpu%  %dynnetwork% }{  "
,  commands = 
        [
        -- Disk usage 
         Run DiskU          [("/","<icon=extra/harddisk-icon_16.xpm/> /: <usedp>%")] 
                             [ "-L","50", "-l", "grey"]
                             300

        -- memory usage monitor
       , Run Memory          [ "-t", "<icon=extra/memory-icon_24.xpm/> <usedratio>%"
                             , "-L", "20", "-l", "grey" , "-H", "90", "-h", "darkred"
                             , "-w", "2"
                             ] 50

        -- cpu activity monitor
        , Run MultiCpu       [ "-t" , "<icon=extra/cpu-icon_24.xpm/><total>%"
                             , "-L", "50", "-l", "grey", "-H", "85", "-h", "darkred"
                             , "-w",  "2"
                             ] 50

        -- network activity monitor (dynamic interface resolution)
        -- threshold units: B/s
        , Run DynNetwork     [ "-t" , "<icon=extra/wifi-icon_16.xpm/><up> <dev>: <icon=extra/down_arrow_1_14.xpm/><tx> kB/s <icon=extra/up_arrow_1_14.xpm/><rx> kB/s"
                             , "-L", "1000", "-H", "5000"
                             , "-w", "3"
                             , "--", "--devices", "wlp6s0,enp7s0"
                             ] 10

        -- time and date indicator 
        --   (%e = day of month, %b month name %a = day of week, %r = 12 hour format)
        , Run Date           "<icon=extra/calendar-clock-icon_16.xpm/> <fc=#ABABAB>%e %b %Y (%a) %r</fc>" "date" 10

         , Run Com "uname" ["-s","-r"] "" 0

        ]
}
